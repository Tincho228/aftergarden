 <!-- Modal -->
 <div class="modal fade" id="change_password" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
 aria-hidden="true">
 <div class="modal-dialog" role="document">
   <div class="modal-content">
     <div class="modal-header bg-dark">
       <img src="images/logo.png" style="width:150px;" alt="aftergarden logo">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
     </div>
     <div class="modal-body">
       <div class="row">
         <div class="col-sm-12 col-md-6"  id="login_message">
          <h3>Change Password</h3>
          <p id="err_changePassword" class="text-danger"></p>
          <hr>
          <form>
            <div class="form-group">
              <label for="client_email">Password</label>
              <input type="password" class="form-control" id="client_password" aria-describedby="emailHelp" required> 
            </div>
            <div class="form-group">
                <label for="client_email"> Repeat Password</label>
                <input type="password" class="form-control" id="repeat_password" aria-describedby="emailHelp" required> 
              </div>
            <a class="btn btn-danger text-light" id="changePassword">Change Password</a>
            <span id="addbutton_save_password"></span>
          </form>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>