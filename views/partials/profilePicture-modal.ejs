 <!-- Modal -->
 <div class="modal fade" id="profilePicture" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
     <div class="modal-dialog" role="document">
         <div class="modal-content">
             <div class="modal-header bg-dark">
                 <img src="images/logo.png" style="width:150px;" alt="aftergarden logo">
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <div class="modal-body">
                 <div class="row">
                     <div class="col-sm-12 col-md-6" id="message_step2">
                         <h2>Insert Profile Picture</h2>
                         <p id="err_step1" class="text-danger"></p>
                         <hr>
                         <form ref='uploadForm' id='uploadForm' method='post' action="/profilePicture"
                             encType="multipart/form-data">
                             <!-- upload an image -->
                             <div class="form-group">
                                 <label for="sampleFile">Upload a picture</label>
                                 <input type="file" name="sampleFile" class="form-control" id="sampleFile"
                                     aria-describedby="emailHelp" required>
                             </div>
                            
                             <div class="d-flex justify-content-end">
                                 <input type="hidden" name="project_id" value="">
                                 <button type="submit" class="btn btn-success" value="Post!">Add Picture</button>
                             </div>
                         </form>
                     </div>
                     <div class="col-sm-12 col-md-6">
                         <div class="image-container">
                             <img src="images/good-start.jpg" style="width:100%;" alt="login image">
                             
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>